# --- Flask / JWT ---
JWT_SECRET_KEY=your_jwt_secret_key

# --- Database (PostgreSQL) ---
DATABASE_URL=postgresql://postgres:password@db:5432/order-processing
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=order-processing

